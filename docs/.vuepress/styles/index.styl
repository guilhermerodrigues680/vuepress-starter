.theme-container {
  .navbar {
    background-color hue($accentColor, hue($accentColor) + 15deg);

    .site-name {
      color: white;
    }

    .links {
      background-color: transparent;

      .nav-links a,
      .nav-links a:hover,
      .nav-links a.router-link-active {
        color: white;
      }

      .icon.outbound {
        color: white;
      }
    }
  }

  .sidebar {
    & > .sidebar-links > li > a.sidebar-link {
      font-weight: 300;
    }
  }
}
